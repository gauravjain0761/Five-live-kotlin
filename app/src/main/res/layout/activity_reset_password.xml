<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >

            <TextView
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="@color/dark_black"
                android:fontFamily="@font/whitney_semibold"
                android:textStyle="normal"
                android:textSize="32sp"
                android:lineSpacingExtra="11sp"
                />

            <TextView
                android:visibility="gone"
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Sign up to enter in the app."
                android:fontFamily="@font/whitneybook"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/light_black"
                android:lineSpacingExtra="8sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_passTIL"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:fontFamily="@font/whitneybook"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/dark_gray_color"
                android:lineSpacingExtra="5sp"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_pass_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#4b5865"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_passTIL"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:fontFamily="@font/whitneybook"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/dark_gray_color"
                android:lineSpacingExtra="5sp"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_pass_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#4b5865"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/updatePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@drawable/blue_btn_bg"
                android:textAllCaps="false"
                android:text="Update Password"
                android:fontFamily="@font/whitney_semibold"
                android:textStyle="normal"
                android:textSize="18sp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>