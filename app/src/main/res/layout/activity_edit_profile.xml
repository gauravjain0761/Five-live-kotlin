<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/whitney_semibold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="7sp"
                android:text="Edit Profile"
                android:layout_marginVertical="20dp"
                android:textColor="@color/dark_black"
                android:textSize="19sp"
                android:textStyle="normal" />

            <!--<ImageView
                android:id="@+id/profile_imv"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_img" />-->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imv"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_other"
                />

            <TextView
                android:id="@+id/changePhoto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/whitneybook"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="13sp"
                android:text="@string/change_photo"
                android:textColor="@color/blue_color"
                android:textSize="13sp"
                android:textStyle="normal" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fnTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/whitneybook"
                android:hint="First Name"
                android:lineSpacingExtra="5sp"
                android:textColor="#9a9a9a"
                android:textSize="16sp"
                android:textStyle="normal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fName_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textColor="#4b5865"
                    android:lineSpacingExtra="6sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lnTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/whitneybook"
                android:hint="Last Name"
                android:lineSpacingExtra="5sp"
                android:textColor="#9a9a9a"
                android:textSize="16sp"
                android:textStyle="normal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lName_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#4b5865"
                    android:lineSpacingExtra="6sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pnTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/whitneybook"
                android:hint="Phone Number"
                android:lineSpacingExtra="5sp"
                android:textColor="#9a9a9a"
                android:textSize="16sp"
                android:textStyle="normal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNumber_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:textColor="#4b5865"
                    android:lineSpacingExtra="6sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/whitneybook"
                android:hint="Email address"
                android:lineSpacingExtra="5sp"
                android:textColor="#9a9a9a"
                android:textSize="16sp"
                android:textStyle="normal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailAddress_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/whitneymedium"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textColor="#4b5865"
                    android:lineSpacingExtra="6sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dobTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/whitneybook"
                    android:hint="Date of Birth"
                    app:errorEnabled="true"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="16sp"
                    android:textStyle="normal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateOfBirth_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/whitneymedium"
                        android:clickable="true"
                        android:singleLine="true"
                        android:focusable="false"
                        android:lineSpacingExtra="6sp"
                        android:cursorVisible="false"
                        android:textColor="#4b5865"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/genderTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/whitneybook"
                    android:hint="Gender"
                    android:lineSpacingExtra="5sp"
                    app:errorEnabled="true"
                    app:endIconDrawable="@drawable/ddown"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="16sp"
                    android:textStyle="normal">

                    <AutoCompleteTextView
                        android:id="@+id/selectGenderAutoCompTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="@font/whitneymedium"
                        android:background="@null"
                        android:singleLine="true"
                        android:cursorVisible="false"
                        android:textColor="#4b5865"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_btn_bg"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/whitney_semibold"
                android:textStyle="normal"
                android:textSize="18sp"
                android:letterSpacing="-0.01"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>