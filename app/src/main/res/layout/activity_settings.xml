<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingsActivity"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/whitney_semibold"
        android:textStyle="normal"
        android:textSize="19sp"
        android:layout_marginVertical="20dp"
        android:textColor="@color/dark_black"
        android:lineSpacingExtra="7sp"
        android:gravity="center_horizontal"
        android:text="Settings"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:fontFamily="@font/whitneybook"
            android:lineSpacingExtra="7sp"
            android:padding="20dp"
            android:text="Notifications"
            android:textSize="18sp"
            android:textColor="#22232a"
            />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/notificationSwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/changePasswordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/whitney_semibold"
        android:paddingVertical="10dp"
        android:background="@drawable/sky_color_bg"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:textStyle="normal"
        android:textSize="15sp"
        android:layout_marginVertical="20dp"
        android:textColor="#0042b9"
        android:lineSpacingExtra="5sp"
        android:text="Change Password"
        />


</LinearLayout>